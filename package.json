{
  "name": "@openvanilla/mcbopomofoweb",
  "version": "1.9.6",
  "description": "McBopomofo input method built with TypeScript and other Web technologies",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "files": [
    "dist",
    "src",
    "!src/chromeos_ime.ts",
    "!src/pime.ts",
    "!src/pime_keys.ts",
    "other",
    "README.md",
    "LICENSE.txt"
  ],
  "scripts": {
    "ts-build": "tsc",
    "ts-build:watch": "tsc -w",
    "build": "webpack --mode production",
    "build:chromeos": "webpack --mode production --config webpack.config.chromeext.js",
    "build:pime": "webpack --mode production --config webpack.config.pime.js",
    "build:mcp": "webpack --mode production --config webpack.config.mcp.js",
    "build:dev": "webpack --mode development",
    "build:watch": "webpack --mode development --watch",
    "prepare": "tsc",
    "prepublishOnly": "npm run test && npm run eslint",
    "test": "./node_modules/jest/bin/jest.js",
    "test:coverage": "./node_modules/jest/bin/jest.js --coverage",
    "eslint": "eslint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/openvanilla/McBopomofoWeb.git"
  },
  "author": "The McBopomofo Authors",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/openvanilla/McBopomofoWeb/issues"
  },
  "homepage": "https://github.com/openvanilla/McBopomofoWeb#readme",
  "dependencies": {
    "@cfworker/json-schema": "^4.1.1",
    "@modelcontextprotocol/sdk": "^1.27.1",
    "chinese_convert": "^1.0.8",
    "dayjs": "^1.11.19",
    "lodash": "^4.17.23",
    "lz-string": "^1.5.0",
    "minimatch": ">=10.2.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/chrome": "^0.1.37",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.24",
    "@types/node": "^25.3.0",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0",
    "shx": "^0.4.0",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.105.2",
    "webpack-cli": "^6.0.1"
  },
  "browser": {
    "assert": false
  }
}
